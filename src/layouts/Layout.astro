---
import BaseHead from "../components/BaseHead.astro";
import DecorativeStar from "../components/DecorativeStar.astro";
import Footer from "../components/Footer.astro";
import HeroMini from "../components/HeroMini.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";

interface LayoutProps {
	title?: string;
	description?: string;
	robots?: string;
}

const { title = SITE_TITLE, description = SITE_DESCRIPTION, robots } =
	Astro.props as LayoutProps;

const isHome = Astro.url.pathname === "/";
---

<!DOCTYPE html>
<html lang="en">
	<BaseHead title={title} description={description} robots={robots} />
	<body class="page">
		{!isHome && <HeroMini />}
		<div class="page__mesh" aria-hidden="true"></div>
		<main class="page__main">
			<slot />
		</main>
		<Footer />
		<DecorativeStar />
	</body>
</html>
